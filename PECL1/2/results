          (at-robby roomb)
        )
      )
  )

  (:action drop
    :parameters (ball1 rooma right)
    :precondition
      (and
        (ball ball1)
        (room rooma)
        (gripper right)
        (carry right ball1)
        (at-robby rooma)
      )
    :effect
      (and
        (at-ball ball1 rooma)
        (free right)
        (not
          (carry right ball1)
        )
      )
  )

